<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tittle_message"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
    <TextView
            android:text="message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/message_text"
            app:layout_constraintTop_toBottomOf="@+id/tittle_message"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="15dp" android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
</android.support.constraint.ConstraintLayout>